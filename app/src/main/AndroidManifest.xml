<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nicholasdass.merchantcommander">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".GameSetupActivity" /> -->
        <activity
            android:name=".GameSetupActivity"
            android:label="@string/title_activity_game_setup"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SlideoutMenuActivity"
            android:label="@string/title_activity_slideout_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlanetMarketActivity"
            android:label="@string/title_activity_planet_market"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EmpireShopActivity"
            android:label="@string/title_activity_empire_shop"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>