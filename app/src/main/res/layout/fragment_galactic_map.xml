<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nicholasdass.merchantcommander.GalacticMapFragment">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="3"
        android:rowCount="3"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/imgNeptune"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="planetNeptune"
            android:tag="0"
            android:background="@drawable/planet_neptune" />

        <ImageView
            android:id="@+id/imgMars"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginTop="40dp"
            android:layout_marginRight="40dp"
            android:onClick="planetMars"
            android:tag="1"
            android:background="@drawable/planet_mars"
            android:elevation="0dp" />

        <ImageView
            android:id="@+id/imgEarth"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="50dp"
            android:onClick="planetEarth"
            android:tag="2"
            android:background="@drawable/planet_earth"
            android:elevation="0dp" />

    </GridLayout>

</RelativeLayout>
