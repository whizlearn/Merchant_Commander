<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nicholasdass.merchantcommander.SpaceCompanySummaryFragment"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/txtCompanyName"
        android:text="Company Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtMerchantCommanderName"
        android:text="Merchant Commander Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:textAlignment="center"
        android:layout_below="@+id/txtCompanyName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtNumberOfEmployees"
        android:text="Number of Employees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"

        android:layout_alignBaseline="@+id/txtNumberOfShips"
        android:layout_alignBottom="@+id/txtNumberOfShips"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp" />

    <ImageView
        android:id="@+id/imgSpaceCompanyLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="72dp"
        android:layout_below="@+id/txtMerchantCommanderName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txtNumberOfShips"
        android:text="Number of Ships"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="59dp"
        android:textAlignment="textStart"
        android:layout_marginStart="13dp"
        android:layout_below="@+id/imgSpaceCompanyLogo"
        android:layout_toEndOf="@+id/imgSpaceCompanyLogo" />

</RelativeLayout>
